package reo0306:glitch-art@0.1.0;

interface png-glitchable {
    enum filter-type {
        none,
        sub,
        up,
        average,
        paeth
    }

    record scan-line {
        filter-type: filter-type,
        pixel-data: list<u8>,
    }

    glitch: func(scan-line: scan-line) -> scan-line;
}

world png-glitcher {
    export png-glitchable;
}

world png-glitch-cli {
    import png-glitchable;
}